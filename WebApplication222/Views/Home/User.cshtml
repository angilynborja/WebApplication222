@{
    ViewData["Title"] = "Home Page";
    string loggedInUser = Context.Session.GetString("Username");
}

<div class="container mt-4">
    <h2 class="text-center">User Management</h2>

   
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>
                            @if (user.Username == loggedInUser)
                            {
                                <form asp-action="UpdateUser" method="post" class="d-flex gap-2">
                                    <input type="hidden" name="Id" value="@user.Id" />
                                    <input type="password" name="Password" class="form-control" placeholder="New Password" required />
                                    <button type="submit" class="btn btn-outline-success">Update</button>
                                </form>
                                 <td>
                           
                        </td>

                            }
                            else
                            {
                                <span class="text-muted">Hidden</span>
                            }
                        </td>
                        
                        <td>
                            @if (user.Username == loggedInUser)
                            {
                                
                            }
                            else
                            {
                                <span class="text-muted">Not Allowed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <form asp-action="Logout" method="post" class="text-center mt-3">
        <button type="submit" class="btn btn-outline-warning">Log Out</button>
    </form>
</div>
